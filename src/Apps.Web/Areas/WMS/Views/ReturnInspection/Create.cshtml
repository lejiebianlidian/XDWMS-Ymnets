        sender.select();
    }
    function setKeyUpValueForQty(e, rowIndex)
    {
        var code = e.keyCode || e.which;
        if (code == 13)
        {
            ChangeFocus(rowIndex, "PCS");
        }
    }

    function setFocusForPCS(sender)
    {
        sender.select();
    }
    function setKeyUpValueForPCS(e, rowIndex)
    {
        var code = e.keyCode || e.which;
        if (code == 13)
